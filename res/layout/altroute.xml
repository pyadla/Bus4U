<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg8">
    <TableLayout android:layout_width="fill_parent" 
    android:id="@+id/tableLayout4" 
    android:layout_height="wrap_content">
    <TableRow android:id="@+id/tr1" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="center_horizontal">
    <Button android:id="@+id/back" 
    android:text="Back"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></Button>
    <Button android:text="HOME" 
    android:id="@+id/home" 
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></Button>
    <Button android:text="Gallery" 
    android:id="@+id/next"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></Button>
</TableRow></TableLayout>
    <TextView android:text="Select a via stop" 
    android:id="@+id/tv1" 
    android:layout_width="wrap_content" 
    android:layout_height="40dip" 
    android:textSize="20dip" 
    android:gravity="center_vertical"
    android:textColor="#FFFF00"></TextView>
    <Spinner android:id="@+id/via" 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent"
    android:drawSelectorOnTop="true" 
    android:entries="@array/stop_list"></Spinner>
    <TableLayout android:layout_width="fill_parent" 
    android:id="@+id/tableLat4" 
    android:layout_height="wrap_content">
    <TableRow android:id="@+id/trr1" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="center_horizontal">
    <Button android:clickable="true" 
    android:layout_height="40dip"
    android:layout_width="wrap_content"
    android:text="Display routes" 
    android:id="@+id/show" 
    android:background="@drawable/bg1" 
    android:textColor="#220000" 
    android:textSize="18dip">
    </Button></TableRow></TableLayout>
    <ScrollView android:id="@+id/sv1" 
    android:layout_width="match_parent" android:layout_height="200dip">
    <TextView android:text="" 
    android:id="@+id/tv2" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:cursorVisible="true"
    android:editable="true"
    android:bufferType="editable"
    android:textColor="#2EFE2E"
    android:textSize="20dip"></TextView>
    </ScrollView>
    <TableLayout android:layout_width="fill_parent" 
    android:id="@+id/tableLayout3" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_height="wrap_content">
    <TableRow android:id="@+id/tableRowe" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView android:layout_height="wrap_content" 
    android:src="@drawable/bus5" 
    android:id="@+id/imageView2" 
    android:layout_width="wrap_content"></ImageView></TableRow>
    </TableLayout>    
</LinearLayout>
