<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_width="fill_parent" 
    android:id="@+id/tableLayout1" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_height="fill_parent"
    android:background="@drawable/bg2">
    <TableRow android:id="@+id/tableRow1" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:gravity="center_horizontal">
    <TextView 
    android:id="@+id/tw" 
    android:textAppearance="?android:attr/textAppearanceLarge" 
    android:text="BUS4U"  
    android:textStyle="bold" 
    android:gravity="center" 
    android:textColor="#FFFFFF" android:layout_height="150dip"></TextView></TableRow>
    <TableRow android:id="@+id/tableRow2" 
    android:layout_width="wrap_content" 
    android:gravity="center_horizontal" android:layout_height="200dip">
    <ImageView android:id="@+id/imageView1" 
    android:src="@drawable/bustoon" 
    android:layout_width="wrap_content" 
    android:layout_gravity="center_horizontal" android:layout_height="120dip"></ImageView>
    </TableRow>
    <TableRow android:id="@+id/tableRow3" 
    android:layout_width="wrap_content" 
    android:gravity="center_horizontal" android:layout_height="80dip">
    <TextView 
    android:id="@+id/twv" 
    android:text=""  
    android:textStyle="bold" 
    android:gravity="center" 
    android:layout_height="50dip"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow3" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" android:gravity="center_horizontal">
    <Button android:text="Click to Proceed" 
    android:id="@+id/proceed" 
    android:clickable="true" 
    android:layout_width="wrap_content"
    android:textColor="#000000" 
    android:layout_height="40dip"></Button></TableRow>
</TableLayout>

